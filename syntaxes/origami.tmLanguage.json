{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Origami",
  "scopeName": "source.origami",
  "patterns": [
    {
      "include": "#shebang"
    },
    {
      "include": "#expression"
    },
    {
      "include": "#comment"
    }
  ],
  "repository": {
    "angle-bracket-path": {
      "begin": "<",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.angle-bracket.begin.origami"
        }
      },
      "end": ">",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.angle-bracket.end.origami"
        }
      },
      "name": "constant.other.link",
      "patterns": [
        {
          "match": "[^>\t\n\r]+"
        }
      ]
    },
    "array": {
      "begin": "\\[",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.array.begin.origami"
        }
      },
      "end": "\\]",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.array.end.origami"
        }
      },
      "name": "meta.structure.array.origami",
      "patterns": [
        {
          "include": "#expression"
        },
        {
          "match": ",",
          "name": "punctuation.separator.array.origami"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line.origami",
          "begin": "(^|\\s)//",
          "end": "$"
        },
        {
          "name": "comment.block.origami",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "expression": {
      "name": "meta.expression.origami",
      "patterns": [
        {
          "include": "#angle-bracket-path"
        },
        {
          "include": "#array"
        },
        {
          "include": "#comment"
        },
        {
          "include": "#group"
        },
        {
          "include": "#string-double-quote"
        },
        {
          "include": "#string-single-quote"
        },
        {
          "include": "#template-literal"
        },
        {
          "include": "#uri"
        },
        {
          "include": "#function-call"
        },
        {
          "include": "#number"
        },
        {
          "include": "#key"
        },
        {
          "include": "#separators"
        },
        {
          "include": "#operators"
        }
      ]
    },
    "function-call": {
      "name": "entity.name.function.origami",
      "match": "[$_\\p{ID_Continue}\\.~][$_\\p{ID_Continue}\\.~@!+\\-*%&|^]+(?=\\()"
    },
    "group": {
      "begin": "\\(",
      "beginCaptures": {
        "0": {
          "name": "meta.brace.round.js"
        }
      },
      "end": "\\)",
      "endCaptures": {
        "0": {
          "name": "meta.brace.round.js"
        }
      },
      "patterns": [
        {
          "include": "#expression"
        }
      ]
    },
    "key": {
      "name": "variable.origami",
      "match": "[$_\\p{ID_Continue}\\.~][$_\\p{ID_Continue}\\.~@!+\\-*%&|^]+"
    },
    "number": {
      "match": "(\\d+(\\.\\d*)?)|(\\.\\d+)",
      "name": "constant.numeric.origami"
    },
    "operators": {
      "name": "keyword.operator.origami",
      "match": "===|!==|==|!=|<=|<|>=|>|\\*|\\*\\*|\\/|%|\\+|-|=>|⇒|->|→|=|:|\\.\\.\\.|…|&&|&|\\|\\||\\||!|\\^|~|\\?\\?|\\?\\.|\\?|#!"
    },
    "separators": {
      "name": "punctuation.separator.origami",
      "match": "[\\/:%,]"
    },
    "shebang": {
      "match": "^(#!.*)$",
      "captures": {
        "1": {
          "name": "comment.line.shebang.origami"
        }
      }
    },
    "string-character-escape": {
      "name": "constant.character.escape.origami",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    },
    "string-double-quote": {
      "name": "string.quoted.double.origami",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    "string-single-quote": {
      "name": "string.quoted.single.origami",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    "template-literal": {
      "name": "string.interpolated.origami",
      "begin": "`",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.interpolated.begin.origami"
        }
      },
      "end": "`",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.interpolated.end.origami"
        }
      },
      "patterns": [
        {
          "include": "#template-substitution"
        },
        {
          "include": "#string-character-escape"
        },
        {
          "include": "text.html.basic"
        }
      ]
    },
    "template-substitution": {
      "name": "meta.embedded.expression.origami",
      "begin": "\\$\\{",
      "beginCaptures": {
        "0": {
          "name": "support.constant.origami"
        }
      },
      "end": "\\}",
      "endCaptures": {
        "0": {
          "name": "support.constant.origami"
        }
      },
      "patterns": [
        {
          "include": "#expression"
        }
      ]
    },
    "uri": {
      "name": "constant.other.link",
      "match": "\\b[a-z]+:[^,\\)\\]\\}\\s]+"
    }
  }
}
