{
  "compilerOptions": {
    "checkJs": true,
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["src/**/*.mjs", "test/**/*.mjs"]
}
