{
  "name": "origami-vscode-extension",
  "version": "0.0.12",
  "displayName": "Origami language support",
  "description": "Language support for the Origami expression language",
  "publisher": "WebOrigami",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/WebOrigami/origami-vscode-extension"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:origami"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "build": "mkdir -p build; vsce package --out build/origami.vsix",
    "build-lsp": "node scripts/build-lsp.js"
  },
  "dependencies": {
    "@weborigami/language": "0.2.9",
    "@types/vscode": "1.75.1",
    "vscode-languageclient": "9.0.1",
    "vscode-languageserver": "9.0.1",
    "vscode-languageserver-textdocument": "1.0.12"
  },
  "devDependencies": {
    "esbuild": "0.25.1",
    "@vscode/vsce": "3.2.2"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "grammars": [
      {
        "language": "origami",
        "scopeName": "source.origami",
        "path": "./syntaxes/origami.tmLanguage.json"
      },
      {
        "language": "origami-html",
        "scopeName": "text.html.origami",
        "path": "./syntaxes/origami-html.tmLanguage.json"
      },
      {
        "language": "origami-markdown",
        "scopeName": "text.html.markdown.origami",
        "path": "./syntaxes/origami-markdown.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "origami",
        "aliases": [
          "Origami",
          "Web Origami"
        ],
        "configuration": "./language-configuration.json",
        "extensions": [
          ".ori"
        ],
        "icon": {
          "light": "./icon.svg",
          "dark": "./icon.svg"
        }
      },
      {
        "id": "origami-html",
        "aliases": [
          "Origami HTML Document"
        ],
        "configuration": "./language-configuration.json",
        "extensions": [
          ".ori.html"
        ],
        "icon": {
          "light": "./icon.svg",
          "dark": "./icon.svg"
        }
      },
      {
        "id": "origami-markdown",
        "aliases": [
          "Origami Markdown Document"
        ],
        "configuration": "./language-configuration.json",
        "extensions": [
          ".ori.md"
        ],
        "icon": {
          "light": "./icon.svg",
          "dark": "./icon.svg"
        }
      }
    ]
  }
}
